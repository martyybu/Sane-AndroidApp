<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/EditTextEmailAddress"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#e9e0e0"
        android:hint="Email Address" />

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="We will send a reset password email directly to you."
        android:textColor="#3e3b3b"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ButtonResetPassword"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:background="#ffbb00"
        android:textColor="#ffffff"
        android:text="Send reset password email" />
    <TextView
        android:id="@+id/TextViewBackToLogin"
        android:textColor="#02b0c4"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text = "Back to login"
        android:layout_width="230dp"/>
    <Button
        android:id="@+id/ButtonSignUp"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:background="#e9e0e0"
        android:textColor="#201f1f"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Don't have an account yet? Sign up" />


</LinearLayout>